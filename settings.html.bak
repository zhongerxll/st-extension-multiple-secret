<!-- You might want to add additional HTML elements to ST. 
    It's good practice to separate it out from your code -->
<div class="multiple-secrets-settings">
    <div class="inline-drawer">
        <div class="inline-drawer-toggle inline-drawer-header">
            <b>Multiple Secrets</b>
            <div class="inline-drawer-icon fa-solid fa-circle-chevron-down down"></div>
        </div>
        <div class="inline-drawer-content">
        	<div id="multiple-secrets-container">
                <div class="flex-container">
                    <input class="text_pole flex1 multiple-secrets-field" maxlength="500" value="" type="text" autocomplete="off" data-i18n="[placeholder]Please enter your API key" placeholder="Please enter your API key"/>
                    <div title="Clear your API key" data-i18n="[title]Clear your API key" class="menu_button fa-solid fa-circle-xmark remove-multiple-secrets-field"></div>
                </div>
            </div>
            <small data-i18n="Please enter an API key for each input field.">Please enter an API key for each input field.</small>
            
            <hr class="sysHR" />
            <div class="flex-container alignitemscenter spaceBetween">
            	<div class="flex-container">
                    <div id="save-secrets" class="menu_button menu_button_icon" data-i18n="Save">Save</div>
                    <div id="add-multiple-secrets-field" class="menu_button menu_button_icon" data-i18n="Add input field">Add input field</div>
                </div>
                    <div class="view-secrets menu_button menu_button_icon" data-i18n="View hidden API keys">View hidden API keys</div>
            </div>
        </div>
    </div>
</div>